{% extends 'base.html.twig' %}

{% block title %}Hello UserHomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

<div class="example-wrapper">
    <p class="">Nous sommes le {{ "now"|date("m/d/Y H:i:s")|format_datetime('full', 'short', locale='fr') }}</p><br>
    <h1>Hello {{ user.firstname }} {{ user.lastname }}! ✅</h1>
    <h2>Connecté(e) à {{ user.session.name }}</h2><br>
    <a class="btn btn-primary btn-lg text-justify" href="{{ path('app_logout') }}">Déconnexion</a>
</div>


{% endblock %}
